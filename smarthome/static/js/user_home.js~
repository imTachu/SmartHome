        var sensorArray = []
        var isSensor=0;
        function set_sensor(code, idcontrol,color) {

            isSensor=1;
            var control= '#'+idcontrol;        

            var typeSensor = code.substring(0, 1);
            if (typeSensor == 'p') {
                $(control).css('background-image', 'url({{ STATIC_URL }}css/Images/p.png)');
            }
            else if (typeSensor == 'm') {
                $(control).css('background-image', 'url({{ STATIC_URL }}css/Images/m.png)');
            }
            else if (typeSensor == 'h') {
                $(control).css('background-image', 'url({{ STATIC_URL }}css/Images/h.png)');
            }
            else if (typeSensor == 't') {
                $(control).css('background-image', 'url({{ STATIC_URL }}css/Images/t.png)');
            }
            else if (typeSensor == 'l') {
                $(control).css('background-image', 'url({{ STATIC_URL }}css/Images/l.png)');
            }

            $(control).val(idcontrol);
            $(control).css('background-color', color);
            $(control).css('-webkit-box-shadow', '0px 0px 7px 2px '+ color);
            $(control).css('-moz-box-shadow', '0px 0px 7px 2px '+ color);
            $(control).css('box-shadow', '0px 0px 7px 2px '+ color);	
        }

        function setRow(control)
        {
            for (var i = 1 ; i <= 400; i++) {
                $('#tr'+i).css('background', 'transparent');
            }
            $("#tr"+control.id).css('background', '#109bce');
        }

        function onSensor(control,color)
        {
            for (var i = 1 ; i <= 400; i++) {
                $('#tr'+i).css('background', 'transparent');
              
            }

            $("#tr"+control).css('background', color);
            $("#"+control).css('border', '2px solid  blue');
        }

        function leaveSensor(control,color)
        {
            $("#"+control).css('border', '2px solid '+color);
        }

        var audio;
        var stopAudio;
        var $panelSound;
        $(document).ready(function () {
            if(isSensor>0)
            {
                $panelSound = $('#asideAudio');
                $panelSound.animate({
                    width: "30vw",
                    top: "85%"
                }, 1000, function () {
                    $panelSound.removeClass('asideAudio-inicio');
                    $panelSound.addClass('asideAudio-sound');
                    $panelSound.removeClass('asideAudio-mute');
                    $('#sp_Alert, #stopAudio, #mute').removeClass('hiddenControl');
                    $('#sp_Alert, #stopAudio, #mute').addClass('visibleControl');
                });

                audio = $("#audioDemo");
                addEventHandlers();
                loadAudio();
                startAudio();
                audio.prop("volume", 1);
            }
            isSensor=0;
        });

        function hideAlert() {
            $panelSound.animate({
                width: "0",
                top: "85%"
            }, 1000, function () {
                $panelSound.removeClass('asideAudio-sound');
                $panelSound.addClass('asideAudio-mute');
                $('#sp_Alert, #btnStopAlert, #mute').removeClass('visibleControl');
                $('#sp_Alert, #btnStopAlert, #mute').addClass('hiddenControl');
            });
        }



        function addEventHandlers() {
            $("#stopAudio").click(stopAudio);
        }

        function loadAudio() {
            audio.trigger('load');
            $("#audioWacthApp").trigger('load');
        }

        function startAudio() {
            $("#audioWacthApp").trigger('play');
            stopAudio = setInterval(function () {
                audio.trigger('play')
            }, 100);
        }

        function pauseAudio() {
            audio.trigger('pause');
        }

        function stopAudio() {
            clearInterval(stopAudio);
            audio.trigger('pause');
            audio.prop("currentTime", 0);
            audio.prop("muted", !audio.prop("muted"));
        }
